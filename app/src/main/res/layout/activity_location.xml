<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/lightBackground"
    tools:context=".Login.LocationActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="355dp"
        android:layout_height="600dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/white_background"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/text_permission_request"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Enable location services to unlock personalized features and discover nearby experiences tailored just for you. Your location helps us provide relevant recommendations and streamline your app experience. Allow access now to get started!"
            android:textSize="24dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button_allow_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_permission_request"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Allow Permission"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button_decline_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_permission_request"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/background"
            android:text="Descline Permission"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>
